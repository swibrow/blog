  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/samuelwibrow/",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>`,
  },
  {
    name: "Strava",
    url: "https://www.strava.com/athletes/21868831",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.598h4.172L10.463 0l-7 13.828h4.169"/></svg>`,
  },
];
---

<section class="relative overflow-hidden py-16 md:py-24">
  <MountainBackdrop />
  <div class="relative z-10 mx-auto max-w-4xl px-4 text-center">
    <h1 class="mb-4 font-mono text-3xl font-bold md:text-5xl" style="color: var(--ctp-green);">
      Samuel Wibrow
    </h1>
    <p class="mb-8 font-mono text-lg" style="color: var(--ctp-subtext1);">
      A blog mostly written with LLMs
    </p>
    <div class="flex items-center justify-center gap-6">
      {
        socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            title={link.name}
            class="transition-colors"
            style="color: var(--ctp-subtext1);"
            data-social-link
          >
            <Fragment set:html={link.icon} />
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  [data-social-link]:hover {
    color: var(--ctp-green) !important;
  }
</style>
