---
import Card from "@components/ui/Card.astro";

interface Props {
  title: string;
  date: Date;
  id: string;
}

const { title, date, id } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div id={id} class="til-entry">
  <Card>
    <h2 class="mb-1 text-lg font-bold" style="color: var(--ctp-blue);">
      {title}
    </h2>
    <time class="mb-3 block font-mono text-xs" style="color: var(--ctp-subtext0);">
      {formattedDate}
    </time>
    <div class="prose">
      <slot />
    </div>
  </Card>
</div>

<style>
  .til-entry {
    margin-bottom: 1rem;
  }
</style>
