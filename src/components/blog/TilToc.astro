---
interface TocItem {
  title: string;
  id: string;
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

<aside class="til-toc">
  <div class="toc-sticky">
    <h2>Quick Nav</h2>
    <nav>
      <ul>
        {
          items.map((item) => (
            <li>
              <a href={`#${item.id}`}>{item.title}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</aside>

<style>
  .til-toc {
    position: relative;
  }

  .toc-sticky {
    position: sticky;
    top: 80px;
    max-height: calc(100vh - 100px);
    overflow-y: auto;
    padding: 1.5rem;
    background: var(--ctp-mantle);
    border: 1px solid var(--ctp-green);
    border-radius: 4px;
  }

  .toc-sticky h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.2rem;
    color: var(--ctp-green);
    border-bottom: 1px solid var(--ctp-green);
    padding-bottom: 0.5rem;
  }

  nav {
    font-family: "Fira Mono", monospace;
    font-size: 0.85rem;
    line-height: 1.6;
  }

  ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  li {
    margin: 0.4rem 0;
  }

  a {
    color: var(--ctp-text);
    text-decoration: none;
    display: block;
    padding: 0.25rem 0.5rem;
    border-left: 2px solid transparent;
    transition: all 0.2s ease;
  }

  a:hover {
    color: var(--ctp-green);
    border-left-color: var(--ctp-green);
    padding-left: 0.75rem;
  }

  .toc-sticky::-webkit-scrollbar {
    width: 6px;
  }

  .toc-sticky::-webkit-scrollbar-track {
    background: var(--ctp-mantle);
  }

  .toc-sticky::-webkit-scrollbar-thumb {
    background: var(--ctp-green);
    border-radius: 3px;
  }
</style>
