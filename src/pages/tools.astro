---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionHeading from "@components/layout/SectionHeading.astro";
import Prose from "@components/ui/Prose.astro";
import { getCollection, render } from "astro:content";

const pages = await getCollection("pages");
const toolsPage = pages.find((p) => p.id === "tools");
if (!toolsPage) throw new Error("Tools page not found");
const { Content } = await render(toolsPage);
---

<BaseLayout title="Tools">
  <SectionHeading title="tools">
    <Prose>
      <Content />
    </Prose>
  </SectionHeading>
</BaseLayout>
