---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionHeading from "@components/layout/SectionHeading.astro";
import Prose from "@components/ui/Prose.astro";
import { getCollection, render } from "astro:content";

const pages = await getCollection("pages");
const projectsPage = pages.find((p) => p.id === "projects");
if (!projectsPage) throw new Error("Projects page not found");
const { Content } = await render(projectsPage);
---

<BaseLayout title="Projects">
  <SectionHeading title="projects">
    <Prose>
      <Content />
    </Prose>
  </SectionHeading>
</BaseLayout>
